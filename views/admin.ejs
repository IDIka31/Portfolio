<section class="pt-36 pb-32">
    <div class="container">
        <div class="w-full px-4">
            <div class="mx-w-xl mx-auto text-center mb-16">
                <h4 class="font-semibold text-lg text-primary mb-2 uppercase">Admin Login</h4>
            </div>
        </div>
        <% if (message.length > 0) { %>
        <!-- Incorrect username / password Message -->
        <div class="w-full px-4 lg:w-2/3 lg:mx-auto">
            <div class="mx-w-xl mx-auto text-center mb-12">
                <div class="bg-green-400 border border-green-300 text-white px-4 py-3 rounded relative" role="alert">
                    <span class="block sm:inline"><%= message %></span>
                </div>
            </div>
        </div>
        <% } %> <% if (error.length > 0) { %>
        <!-- Incorrect username / password Message -->
        <div class="w-full px-4 lg:w-2/3 lg:mx-auto">
            <div class="mx-w-xl mx-auto text-center mb-12">
                <div class="bg-red-400 border border-red-300 text-white px-4 py-3 rounded relative" role="alert">
                    <span class="block sm:inline"><%= error %></span>
                </div>
            </div>
        </div>
        <% } %>
        <form action="/admin" method="post">
            <div class="w-full lg:w-2/3 lg:mx-auto">
                <div class="w-full px-4 mb-8">
                    <label for="username" class="font-bold text-base text-primary">Username</label>
                    <input type="text" id="username" class="w-full bg-slate-200 text-dark p-3 rounded-md focus:outline-none focus:ring-primary focus:ring-1 focus:border-primary" name="username" required />
                </div>
                <div class="w-full px-4 mb-8">
                    <label for="password" class="font-bold text-base text-primary">Password</label>
                    <input type="password" id="password" class="w-full bg-slate-200 text-dark p-3 rounded-md focus:outline-none focus:ring-primary focus:ring-1 focus:border-primary" name="password" required />
                </div>
                <div class="w-full px-4">
                    <button class="font-semibold text-base text-white bg-primary py-3 px-8 rounded-full w-full hover:opacity-80 hover:shadow-lg transition duration-500">login</button>
                </div>
            </div>
        </form>
    </div>
</section>
